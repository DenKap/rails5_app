<div class="container">
  <div class="page-header">
    <h1>Manage Properties <small>Simple add or delete</small></h1>
    <% if @current_user %>
      <%= link_to new_property_path, class: 'btn btn-default' do %>
        Add Property
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% if @properties.present? %>
      <% @properties.each do |property| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <%=image_tag property.floor_plan.url, style: 'max-width: 200px;' %>
            <div class="caption">
              <h3><%=property.key_features %></h3>
              <p><%=property.description %></p>
              <%= link_to property_path(property), class: 'btn btn-info' do %>
                  View Property
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h4>There are no Properties yet.</h4>
    <% end %>
  </div>
  <div class="container">
    <div class="row">
      <div class=".col-md-4"><%=will_paginate @properties, :renderer => BootstrapPagination::Rails %></div>
    </div>
  </div>
</div>